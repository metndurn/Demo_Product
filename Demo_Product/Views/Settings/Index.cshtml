@model Demo_Product.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Profil Biligileri Düzenleme Sayfasi</h1>
<form method="post">
    @Html.Label("Adınız")
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    @Html.Label("Soyadınız")
    <input type="text" asp-for="SurName" class="form-control" />
    <br />
    @Html.Label("Cinsiyetiniz")
    <input type="text" asp-for="Gender" class="form-control" />
    <br />
    @Html.Label("EMail Adresiniz")
    <input type="text" asp-for="EMail" class="form-control" />
    <br />
    @Html.Label("Şifreniz")
    <input type="password" asp-for="Password" class="form-control" />
    <br />
    @Html.Label("Şifre Tekrarı")
    <input type="password" asp-for="ConfirmPassword" class="form-control" />
    <br />
    <button class="btn btn-success">Değişiklikleri Kaydet</button>
</form>

