@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<form method="post">
    @Html.Label("Musteri Adi")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name)
    <br />
    @Html.Label("Musteri Sehri")
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.City)
    <br />
    @Html.Label("Meslek Seciniz")
    @Html.DropDownListFor(x => x.JobId,(List<SelectListItem>)ViewBag.c, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Musteri Ekle</button>
</form>
